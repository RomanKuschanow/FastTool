<UserControl
    x:Class="FastTool.WPF.Controls.Time.Snapshot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FastTool.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FastTool.WPF.Controls.Time"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="30"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:TimeSpanToString x:Key="TimeSpanToString" />
    </UserControl.Resources>

    <Grid>
        <TextBox
            Margin="4,0,2,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="15"
            FontWeight="Bold"
            IsReadOnly="True"
            Text="{Binding Time, Mode=OneWay, Converter={StaticResource TimeSpanToString}}" />

        <Button
            Grid.Column="1"
            Margin="2,0,2,0"
            Content="Copy"
            Visibility="Collapsed" />
        <Button
            Grid.Column="2"
            Margin="2,0,4,0"
            Click="Delete_Click"
            Content="🗑" />
    </Grid>
</UserControl>
