<UserControl
    x:Class="FastTool.WPF.Controls.ListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FastTool.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinHeight="30"
    d:Background="White"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="0"
            Margin="4,4,2,4"
            Click="Add_Click"
            Content="New empty" />
        <Button
            Grid.Column="1"
            Margin="2,4,4,4"
            Click="Clear_Click"
            Content="Clear" />

    </Grid>
</UserControl>
