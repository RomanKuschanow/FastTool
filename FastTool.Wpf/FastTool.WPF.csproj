		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<UseWindowsForms>true</UseWindowsForms>
		<AssemblyName>FastTool</AssemblyName>
		<ApplicationIcon>Icon.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="icon.png" />
		<None Remove="icon1.png" />
		<None Remove="icon2.png" />
		<None Remove="icon3.png" />
		<None Remove="icon4.png" />
		<None Remove="MianIcon.ico" />
		<None Remove="TackBarIcon.ico" />
		<None Remove="TaskBarIcon.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
		<PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\FastTool.HotKey\FastTool.HotKey.csproj" />
		<ProjectReference Include="..\FastTool.Models\FastTool.Models.csproj" />
		<ProjectReference Include="..\FastTool.NetStandart\FastTool.NetStandart.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="MianIcon.ico" />
		<Resource Include="TaskBarIcon.ico" />
	</ItemGroup>

	<ItemGroup>
	  <_DeploymentManifestIconFile Remove="TaskBarIcon.ico" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="Icon.ico" />
	</ItemGroup>

</Project>
